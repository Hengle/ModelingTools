;Name: "{group}\WellFootprint 3.0 Documentation"; Filename: "{app}\doc\tm6-a49.pdf"
;Name: "{group}\WellFootprint Revision History"; Filename: "{app}\doc\Release.chm"
Name: "{commondesktop}\WellFootprint"; Filename: "{app}\bin\WellFootprint.exe"; Tasks: desktopicon
Name: "{group}\WellFootprint readme.txt"; Filename: "{app}\readme.txt"

[Run]
Filename: "{app}\bin\WellFootprint.exe"; Description: "{cm:LaunchProgram,WellFootprint}"; Flags: nowait postinstall skipifsilent
















#Script for PLPROC for saving kriging factors

#Read pilot point data
PMNPilotPoints1 = read_list_file(skiplines=0,dimensions=2, &
  plist='K_1';column=5, &
  id_type='character',file='RmaSutraNodeTest.Minimum_Hydraulic_Conductivity.K.1.pp')

cl_Discretization = read_list_file(skiplines=1,dimensions=2, &
  id_type='indexed',file='RmaSutraNodeTest.c_ele')
#Save Kriging factors
calc_kriging_factors_auto_2d( &
  target_clist=cl_Discretization, &
  source_clist=PMNPilotPoints1, &
  file=RmaSutraNodeTest.Minimum_Hydraulic_Conductivity.Factors1;format=formatted)

